@using Common.Models
@using Prescriptions.Prescription
@model PrescriptionFormModel

<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Number" class="control-label"></label>
				<input asp-for="Number" class="form-control" readonly />
				<span asp-validation-for="Number" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description" class="control-label"></label>
				<textarea asp-for="Description" rows="4" class="form-control" placeholder=""></textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="IssueDate" class="control-label"></label>
				<input asp-for="IssueDate" class="form-control" readonly />
				<span asp-validation-for="IssueDate" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="StaffMemberId" class="control-label"></label>
				<select asp-for="StaffMemberId" class="form-control">
					@foreach (StaffServiceModel staff in Model.Staff)
					{
						<option value="@staff.StaffId">@staff.StaffName</option>
					}
				</select>
				<span asp-validation-for="StaffMemberId" class="text-danger"></span>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

