@using Users.User
@model DisableUserFormModel

@{
	ViewData["Title"] = "Disable User";
}

<form method="post">
	<div class="form-group">
		<label asp-for="StaffMemberId" class="control-label"></label>
		<select asp-for="StaffMemberId" class="form-control">
			@foreach (var staff in Model.Staff)
			{
				<option value="@staff.StaffId">@staff.StaffName</option>
			}
		</select>
		<span asp-validation-for="StaffMemberId" class="text-danger"></span>
	</div>
	<div class="form-group">
		<input type="submit" value="Disable" class="btn btn-primary" />
	</div>
</form>